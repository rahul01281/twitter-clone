extends layouts/main-layout.pug

block content
    if !profileUser
        span.errorMessage Check the username you're trying to see
    else 
        script.
            var profileUserId = "!{profileUser._id}"
            var selectedTab = "!{selectedTab}"

        .tabsContainer 
            +createTab("Following", `/profile/${profileUser.username}/following`, selectedTab != "followers")
            +createTab("Followers", `/profile/${profileUser.username}/followers`, selectedTab == "followers")

        .resultsContainer 

block scripts
    script(src="/js/followList.js") 